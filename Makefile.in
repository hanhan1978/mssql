CC=@CC@
LIBS=@LIBS@
LDFLAGS=@LDFLAGS@
#CFLAGS    = -g -O0 -ggdb

all: mssql makedir move obclean

mssql: mssql.o usage.o option.o slre.o db.o
	${CC} -o mssql mssql.o usage.o option.o slre.o db.o ${LDFLAGS} ${LIBS}

mssql.o: 
	${CC} -c mssql.c

slre.o: 
	${CC} -c slre.c

db.o: 
	${CC} -c db.c

usage.o:
	${CC} -c usage.c

option.o: 
	${CC} -c option.c

move:
	mv mssql ./bin/

makedir:
	if [ ! -d ./bin ]; \
		then mkdir ./bin; \
	fi

.PHONY: clean
clean:
	rm -rf *.o config.status config.log Makefile bin;

.PHONY: obclean
obclean:
	rm -rf *.o ;

install:
	mv ./bin/mssql /usr/local/bin
